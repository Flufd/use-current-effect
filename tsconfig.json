{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": ["es2015","dom"],
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
